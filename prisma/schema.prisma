// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String?
}

model Book {
  id                Int       @id @default(autoincrement())
  title             String
  author            String
  genre             String
  description       String
  yearOfPublication String
  startReading      DateTime?
  endOfReading      DateTime?
  chapters          chapter[]
  numberOfChapters  Int?
  price             Float
  opinion           String    @default("???")
  whyRead           String
  links             String[]
  image             String?
  indication        String[]
}

model chapter {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  Book        Book?  @relation(fields: [bookId], references: [id])
  bookId      Int?
}

model games {
  id          Int      @id @default(autoincrement())
  title       String
  genre       String
  description String
  whyToPlay   String
  platform    String
  medias      String[]
  indication  String[]
  links       String[]
  notes       Json[]
}

model series {
  id          Int        @id @default(autoincrement())
  title       String
  genre       String
  seasons     Int
  description String?
  episodios   episodio[]
  image       String?
  indication  String[]
  links       String[]
  notes       Json[]
}

model episodio {
  id       Int     @id @default(autoincrement())
  series   series? @relation(fields: [seriesId], references: [id])
  seriesId Int?
  title    String
  numOfEp  Int
  notes    Json[]
  watched  String?
}
